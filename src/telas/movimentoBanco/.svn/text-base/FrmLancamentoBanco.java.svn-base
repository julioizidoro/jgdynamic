    private void CodigoContajTextFieldKeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_CodigoContajTextFieldKeyReleased
        if (CodigoContajTextField.getText().length() != 0) {
            try {
                PlanoContaFacade facade = new PlanoContaFacade();
                Planoconta conta = facade.consultarPlanoconta(Integer.parseInt(CodigoContajTextField.getText()));
                if (conta != null) {
                    this.banco.setPlanoconta(conta);
                    CodigoContajTextField.setText(banco.getPlanoconta().getNumeroConta());
                    PlanoContasjTextField.setText(banco.getPlanoconta().getDescricao());
                } else {
                    PlanoContasjTextField.setText("Conta nao Cadastrada");
                }

            } catch (Exception ex) {
                JOptionPane.showMessageDialog(null, " Erro consultar Plano de Contas\n" + ex);
            }
        }else PlanoContasjTextField.setText("Conta nao Cadastrada");
    }//GEN-LAST:event_CodigoContajTextFieldKeyReleased

