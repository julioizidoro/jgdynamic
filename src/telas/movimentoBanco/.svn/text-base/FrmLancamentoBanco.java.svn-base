    private void SalvarjButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SalvarjButtonActionPerformed
        if (validarCaixa()) {
            dataBanco = databancojDateChooser.getDate();
            banco.setDataMovimento(databancojDateChooser.getDate());
            banco.setDescricao(HistoricojTextField.getText());
            float valor = Float.parseFloat("0");
            if (entradajFormattedTextField.getText().length() > 0) {
                banco.setValorEntrada(Float.parseFloat(entradajFormattedTextField.getValue().toString()));
            } else {
                banco.setValorEntrada(valor);
            }
            if (saidajFormattedTextField.getText().length() > 0) {
                banco.setValorSaida(Float.parseFloat(saidajFormattedTextField.getValue().toString()));
            } else {
                banco.setValorSaida(valor);
            }
            PlanoContaFacade planoContasFacade = new PlanoContaFacade();
            try {
                banco.setPlanoconta(planoContasFacade.consultarPlanocontaNuemroConta(CodigoContajTextField.getText()));
            } catch (Exception ex) {
                Logger.getLogger(FrmLancamentoBanco.class.getName()).log(Level.SEVERE, null, ex);
            }
            try {
                banco.setBanco(bancoSelecionado);
                MovimentoBancoFacade facade = new MovimentoBancoFacade();
                facade.salvarBanco(banco);
                CodigoContajTextField.setText("");
                PlanoContasjTextField.setText("Conta  nao Cadastrada");
                HistoricojTextField.setText("");
                saidajFormattedTextField.setText("");
                entradajFormattedTextField.setText("");
                gerarSaldos();
                databancojDateChooser.requestFocus();
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(null, "Erro salvar Lançamento de Caixa\n" + ex);
            }
        }
    }//GEN-LAST:event_SalvarjButtonActionPerformed

