    private  void gerarSaldos() throws SQLException{
        MovimentoBancoFacade facade = new MovimentoBancoFacade();
        List<Double> saldos = facade.calculaSaldos(df.format(dataBanco), bancoSelecionado);
        saldoAnteriorjLabel1.setText(String.valueOf(saldos.get(2)-saldos.get(3)));
        valorEntradajLabel.setText(String.valueOf(saldos.get(0)));
        valorSaidajLabel1.setText(String.valueOf(saldos.get(1)));
        Double saldoAtual = saldos.get(2) - saldos.get(3) + (saldos.get(0) - saldos.get(1));
        saldoAtualjLabel1.setText(String.valueOf(saldoAtual));
    }

    private void popularTela(Movimentobanco banco){
        databancojDateChooser.setDate(banco.getDataMovimento());
